<body background="image.jpg">



    <header>
        <% include partials/header %>
    </header>
    

<div class="pricing-header px-2 py-2 pt-md-5 pb-md-4 mx-auto text-center" style="color:white; ">
  <h1 class="display-5">Your Library info.</h1>
  <p class="lead">Please contact Librarian for more information.</p>
</div>




<div class="container">
<hr >


<br />





<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item ">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-all" role="tab"
          aria-controls="pills-home" aria-selected="true">Show All Books</a>
      </li>
    <li class="nav-item">
        <a class="nav-link " id="pills-profile-tab" style="" data-toggle="pill" href="#pills-transactions" role="tab"
          aria-controls="pills-profile" aria-selected="false">Last Transactions</a>
      </li>
   
    
   
  </ul>
  <div class="tab-content pt-2 pl-1" id="pills-tabContent">

    <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-home-tab">
     
<table id="dtBasicExample" class="table table-striped table-bordered" style="background-color: white;" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th >S.No.
              </th>
          <th >Title
          </th>
          <th class="th-sm">Author
          </th>
          <th class="th-sm">Publisher
          </th>
          <th class="th-sm">ISBN
          </th>
          <th class="th-sm">Description
          </th>
          <th class="th-sm">Book No.
          </th>
          <th class="th-sm">Stock
            </th>
            <th class="th-sm">Link 
              </th> 
        </tr>
    </thead>
    <tbody>
        <%  books.forEach(function(el, index){ %>
          <tr>
            <td><%= (index+1) %></td>
            <td><%= el.title %></td>
            <td><%= el.author %></td>
            <td><%= el.publisher %></td>
            <td><%= el.isbn %></td>
            <td><%= el.description %></td>
            <td><%= el.bookNo %></td>
            <td><%= el.stock %></td>
            <td><a href="<%= el.link %>">Click Here</a></td>
    
          </tr>
          <% }) %>
         
     
    </tbody>
    <tfoot>
        <tr>
            <th >S.No.
              </th>
          <th >Title
          </th>
          <th class="th-sm">Author
          </th>
          <th class="th-sm">Publisher
          </th>
          <th class="th-sm">ISBN
          </th>
          <th class="th-sm">Description
          </th>
          <th class="th-sm">Book No.
          </th>
          <th class="th-sm">Stock
            </th>
            <th class="th-sm">Link 
              </th> 
        </tr>
    </tfoot>
  </table>
  
    
    </div>



    <div class="tab-pane fade" id="pills-transactions" role="tabpanel" aria-labelledby="pills-profile-tab">
     
<table id="dtBasicExample" class="table table-striped table-bordered" style="background-color: white;" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th >S.No.
              </th>
          <th >Issued Date
          </th>
          <th class="th-sm">Return Date
          </th>
          <th class="th-sm">Title
          </th>
          <th class="th-sm">Author
          </th>
          <th class="th-sm">ISBN
          </th>
          <th class="th-sm">Publisher
          </th>
          
          <th class="th-sm">Book No.
          </th> 
        </tr>
    </thead>
    <tbody>
        <%  issuedBooks.forEach(function(el, index){ %>
          <tr>
            <td><%= (index+1) %></td>
            <td><%= el.issuedOn %></td>
            <td><%= el.returnedOn %></td>
            <td><%= el.title %></td>
            <td><%= el.author %></td>
            <td><%= el.isbn %></td>
            <td><%= el.publisher %></td>
            <td><%= el.bookNo %></td>
            
          </tr>
          <% }) %>
         
     
    </tbody>
    <tfoot>
      <tr>
        <th >S.No.
          </th>
      <th >Issued Date
      </th>
      <th class="th-sm">Return Date
      </th>
      <th class="th-sm">Title
      </th>
      <th class="th-sm">Author
      </th>
      <th class="th-sm">ISBN
      </th>
      <th class="th-sm">Publisher
      </th>
      
      <th class="th-sm">Book No.
      </th> 
    </tr>
    </tfoot>
  </table>
  
    
